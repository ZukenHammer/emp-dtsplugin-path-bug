{
  "compilerOptions": {
    "strictPropertyInitialization": false,
    "target": "ESNext",
    "module": "ESNext",
    "declaration": true,
    "outDir": "es6",
    "strict": true,
    "jsx": "preserve",
    "jsxFactory": "h",
    "importHelpers": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "lib": [
      "dom",
      "es5",
      "es6",
      "scripthost",
      "es2015.promise"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
